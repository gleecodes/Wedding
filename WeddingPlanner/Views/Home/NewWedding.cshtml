
@model Wedding

<div class="jumbotron text-center bg-dark">
    <h1 class="display-5 text-warning">Plan Your Wedding!</h1>
</div>


<form asp-action="AddWedding" asp-controller="Home" method="POST">

    <div class="col-6 mx-auto">
        <div class="form-group">
            <span asp-validation-for="Wedder_1" class="text-danger"></span><br>
            <label asp-for="Wedder_1"></label>
            <input asp-for="Wedder_1" class="form-control form-control-lg">
        </div>
        <div class="form-group">
            <span asp-validation-for="Wedder_2" class="text-danger"></span><br>
            <label asp-for="Wedder_2"></label>
            <input asp-for="Wedder_2" class="form-control form-control-lg">
        </div>
        <div class="form-group">
            <span asp-validation-for="Date" class="text-danger"></span><br>
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control form-control-lg">
        </div>
        <div class="form-group">
            <span asp-validation-for="Address" class="text-danger"></span><br>
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control form-control-lg">
        </div>

        <div class="text-center"><input type="submit" value="Create!" class="btn btn-warning w-75" style="font-size:2rem"></div>
    </div>
</form>